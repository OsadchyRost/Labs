(*Задание 13. Написать функции произведение цифр числа, минимальная и
максимальная цифра с использованием рекурсии вверх и с
использованием хвостовой рекурсии.*)

open System

let rec mult a =
    match a with
    | 0->1
    | a -> (a%10)*mult(a/10)

let rec max a = 
    match a with 
    | a when a<>0->
        let a1 = max (a/10)
        match a1 with
        | _ when a%10>a1 -> a%10
        | a1 -> a1
    | a->0

let rec min a =
     match a with
     | a when a<>0->
         let a1 = min(a/10)
         match a1 with
         | _ when a%10<a1 -> a%10
         | a1 -> a1
     | a->9

let rec mult1 x a =
    match x with
    | x when x = 0 -> a
    | x->         
       let x1 = x/10
       let a1 = a*(x%10)
       mult1 x1 a1
 
[<EntryPoint>]
let main argv = 
    let x = Convert.ToInt32(Console.ReadLine())
    printfn "Рекурсия вверх:" 
    printfn "Умножение цифр: %d" (mult x)
    printfn "Максимальная цифра: %d" (max x)
    printfn "Минимальная цифра: %d" (min x)
    printfn "Хвостовая рекурсия:" 
    printfn "Умножение цифр: %d" (mult1 x 1)
    0
